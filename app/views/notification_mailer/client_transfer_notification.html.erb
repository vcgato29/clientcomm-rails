<table border="0" cellpadding="0" cellspacing="0" class="body">
  <tr>
    <td>&nbsp;</td>
    <td class="container">
      <div class="content">
        <!-- START CENTERED WHITE CONTAINER -->
        <span class="preheader">An administrator has transferred a client to you.</span>
        <table class="main">
          <!-- START MAIN CONTENT AREA -->
          <tr>
            <td class="wrapper">
              <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                  <td>
                    <p class="header-appname">ClientComm</p>
                    <p>Hi <%= @current_user.full_name %>,</p>
                    <p>An administrator has transferred <%= @client.full_name %>, <%= @client.phone_number %> to your client list.</p>
                    <% if @previous_user.present? %>
                      <p>Their previous Case Manager was <%= @previous_user.full_name %>.</p>
                    <% end %>

                    <table border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
                      <tbody>
                        <tr>
                          <td>
                            <%= link_to('Introduce yourself on ClientComm', client_messages_url(@client), { target: '_blank', class: 'email-cta' }) %>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <!-- END MAIN CONTENT AREA -->
        </table>
        <!-- END CENTERED WHITE CONTAINER -->
      </div>
    </td>
    <td>&nbsp;</td>
  </tr>
</table>
